modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run build && npm run preview -- --host 0.0.0.0 --port 5000"]

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "Dev Optimized"

[[workflows.workflow]]
name = "Dev Optimized"
author = 43000846
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 5000"
